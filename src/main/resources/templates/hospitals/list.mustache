{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">hospital name</th>
        <th scope="col">address</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
    <tr>
        <th scope="row">{{id}}</th>
        <td style="width: 30%">{{hospitalName}}</a></td>
        <td>{{roadNameAddress}}</td>
    </tr>
    {{/hospitals}}
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        {{#keyword}}
        <li class="page-item">
            <a class="page-link" href="/hospitals?page={{previousPage}}&keyword={{keyword}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="/hospitals?page={{nextPage}}&keyword={{keyword}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
        {{/keyword}}
        {{^keyword}}
            <li class="page-item">
                <a class="page-link" href="/hospitals?page={{previousPage}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/hospitals?page={{nextPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
                </a>
            </li>
        {{/keyword}}
    </ul>
</nav>
