{{>layouts/header}}
{{#article}}
<form class = "container" action="/articles/{{id}}/update" method="post">
    <div class="mb-3">
        <label for="id" class="form-label">Id</label>
        <input type="text" class="form-control" name="id" id="id" value={{id}}>
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="title" id="title" value={{title}}>
    </div>
    <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <input type="text" class="form-control" name="content" id="content" value={{content}}>
    </div>
    <button type="submit" class="btn btn-primary">수정 확인</button>
    <a href="/articles/{{id}}" class="btn btn-success">이전으로</a>
</form>
{{/article}}
{{>layouts/footer}}